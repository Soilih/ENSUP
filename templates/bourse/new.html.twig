
{% extends 'base.html.twig' %}
{% block body %}

<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
               <strong> Gestion bourses d'etudes </strong>
                <a  data-toggle="modal" data-target="#responsable" href="#" class="btn btn-primary" style="float:right">Ajouter une bourse </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                   <div class="card-body table-responsive p-0">
                     <table class="table table-striped">
                        <thead>
                            <tr>
                               <th>Montant mensuel </th>
                               <th>Pays</th>
                                <th>Nature de bourse</th>
                                 <th>Description de la bourse </th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for bourse in app.user.bourses %}
                            <tr>
                              <td>{{ bourse.montant }} KMF</td>
                               <td>{{ bourse.pays }}</td>
                                <td>{{ bourse.Nature }}</td>
                                 <td>{{ bourse.detail }}</td>
                                <td>
                                     <a class="btn btn-info btn-sm" href="{{ path('bourse_edit', {'id': bourse.id}) }}">
                                     <i class="fas fa-pencil-alt"> </i>
                                     </a>
                                    <div style="display: inline-block;padding-left:2% ; color:red">{{ include('bourse/_delete_form.html.twig') }} </div> 
                                  </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">Acune bourse </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
<div class="modal fade" id="responsable" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter une bourse   </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          {{ include('bourse/_form.html.twig') }}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Quitter</button>
         
        </div>
      </div>
    </div>
</div>
{% endblock %}