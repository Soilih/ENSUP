{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <strong style="font-size:20px"> Gestion experience proffessionnelle </strong>
                
                  <a data-toggle="modal" data-target="#responsable" href="#" class="btn btn-primary" style="float:right">Ajouter une experience </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                   <div class="card-body table-responsive p-0">
                    <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            
                            <th>Date debut </th>
                             <th>Date Fin  </th>
                            <th>Poste ocup√©</th>
                            <th>Nom de l'entreprise </th>
                            <th>Pays </th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for experience in app.user.experiences %}
                        <tr>
                          
                            <td>{{ experience.dateExperience ? experience.dateExperience|date('d/m/Y') : '' }}</td>
                             <td>{{ experience.dateExperience ? experience.datefin|date('d/m/Y') : '' }}</td>
                            <td>{{ experience.poste }}</td>
                            <td>{{ experience.entreprise }}</td>
                            <td>{{ experience.pays }}</td>
                            <td>
                             <a class="btn btn-primary btn-sm" href="{{ path('experience_show', {'id': experience.id}) }}">
                              <i class="fas fa-eye">
                              </i>
                              
                          </a>

                          <a class="btn btn-info btn-sm" href="{{ path('experience_edit', {'id': experience.id}) }}">
                              <i class="fas fa-pencil-alt">
                              </i>
                           </a>

                            <div style="display: inline-block;padding-left:2% ; color:red">{{ include('experience/_delete_form.html.twig') }} </div> 
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
              </div>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
<div class="modal fade" id="responsable" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Experience proffessionnelle   </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
           {{ include('experience/_form.html.twig') }}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Quitter</button>
         
        </div>
      </div>
    </div>
</div>
{% endblock %}
  
