

{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                   Flux sortant 
                   </h3>
                </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="data" class="table table-bordered table-hover">
               
                    <thead>
                        <tr>
                            <th>Nom de famille </th>
                            <th>Prenom  </th>
                            <th> Date de depart  </th>
                            <th> Niveau poursuvi   </th>
                            <th>Filiere d'etude </th>
                            <th>Université inscrit  </th>
                            <th>Type université   </th>
                            <th>Cycle d'etude  </th>
                            <th>Ville</th>
                            <th>Pays    </th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for et in nos_etudiant %}
                        <tr>
                            <td>{{ et.nom }}</td>
                             <td>{{ et.prenom }}</td>
                             <td>{{ et.dateDepart ? et.dateDepart |date('d/m/Y' , false) : '' }}</td>
                              <td>{{ et.libelle  }}</td> 
                              <td>{{ et.filiere }}</td> 
                              <td>{{ et.universite }}</td> 
                              <td>{{ et.typeuniversit }}</td> 
                              <td>{{ et.cycle }}</td> 
                              <td>{{ et.ville }}</td> 
                              <td>{{ et.pays }}</td> 
                            
                            
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                

                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
{% endblock %}