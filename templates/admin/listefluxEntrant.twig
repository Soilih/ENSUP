

{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
         
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                  Flux entrant
                 </h3>
                  </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="data" class="table table-bordered table-hover">
               
                    <thead>
                        <tr>
                            <th>Nom de famille </th>
                            <th>Prenom  </th>
                            <th>Diplome   </th>
                            <th>specialité    </th>
                             <th>Niveau d'etude  </th>
                            <th>Date d'arrivée  </th>
                            <th>Date depart   </th>
                            <th>Pays </th>
                           <th>Cycle </th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in nos_etudiant %}
                      <tr>
                            <td>{{ item.nom }}</td>
                            <td>{{ item.prenom }}</td>
                            <td>{{ item.diplome }}</td>
                            <td>{{ item.specialite }}</td>
                            <td>{{ item.libelle }}</td>
                            <td>{{ item.depart  | date('m/d/Y') }}</td>
                            <td>{{ item.date_arrive   | date('m/d/Y') }}</td>
                            <td>{{ item.pays}}</td>
                            <td>{{ item.cycle }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun flux entrant n'est disponible </td>
                        </tr>
                    {% endfor %}
                    
                    </tbody>
                  </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
{% endblock %}
