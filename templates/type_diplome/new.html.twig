
{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
      <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-6">
            <div class="card card-success">
              <div class="card-header" style="font-szie:24px">
                Liste des diplomes 
                <a data-toggle="modal" data-target="#staticBackdrop"  style="float:right"  class="btn btn-success"> <i class="zmdi zmdi-hospital">  </i>  </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                    <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Diplomes </th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                 {% for type_diplome in type_diplome %}
                  <tr>
                   
                    <td>{{ type_diplome.libelle  }}</td>
                    <td>
                     <button class="btn btn-primary btn-sm" > <a href="{{ path('type_diplome_edit', {'id': type_diplome.id}) }}"><i style="color:white" class="fas fa-pencil-alt"></i></a></button>
                     <div style="display: inline-block;padding-left:2% ; color:red">{{ include('type_diplome/_delete_form.html.twig') }} </div> 
                     
                    </td>
                  </tr>
                  {% endfor %}  
                </tbody>
              </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div> 
          <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">Ajouter diplomes </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  {{ include('type_diplome/_form.html.twig') }}
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Quitter</button>
                
                </div>
              </div>
            </div>
          </div>
 

          


        </div>
    </div>
</div>
{% endblock %}

