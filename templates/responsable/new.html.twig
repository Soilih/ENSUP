{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <strong> Gestion responsable </strong>
                  
                    {% if (app.user.responsables|length)<2  %}
                        <a  href=""  data-toggle="modal" data-target="#responsable"  class="btn btn-primary" style="float:right">Ajouter un responsable</a>
                     {% endif %}
                    
                </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table class="table table-bordered table-hover">
                
                    <thead>
                        <tr>
                           
                            <th>Nom  </th>
                            <th>Pr√©nom </th>
                            <th>Telephone</th>
                            <th> Adresse Email </th>
                            <th> Lieu de naissance  </th>
                            <th> Adresse domicile  </th>
                           <th> Proffession </th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for responsable in app.user.responsables %}
                        <tr class="text-nowrap" >
                        
                            <td>{{ responsable.nom }}</td>
                            <td>{{ responsable.prenom }}</td>
                            <td>{{ responsable.tel }}</td>
                            <td>{{ responsable.email }}</td>
                             <td>{{ responsable.lieunaissance }}</td> 
                            <td>{{ responsable.adresse }}</td>
                            <td>{{ responsable.proffession }}</td> 
                            <td>
                                <a  class="btn btn-primary btn-sm" href="{{ path('responsable_show', {'id': responsable.id}) }}">   <i class="fas fa-eye">
                              </i></a>
                                <a  class="btn btn-primary btn-sm" href="{{ path('responsable_edit', {'id': responsable.id}) }}"> <i class="fas fa-pencil-alt"></i> </a>
                                <div style="display: inline-block;padding-left:2% ; color:red">{{ include('responsable/_delete_form.html.twig') }} </div> 
                            </td>
                           
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
<div class="modal fade" id="responsable" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter responsable </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          {{ include('responsable/_form.html.twig') }}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Quitter</button>
         
        </div>
      </div>
    </div>
</div>
{% endblock %}
