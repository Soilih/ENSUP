<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Dashboard</title>
    {% include "link/link_css.html.twig" %}  
</head>
{% include "link/header.html.twig" %}
    <div class="page-container">
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                      {% if (app.user.responsables | length) < 1  %}
                          <div class="col-lg-10">
                              {% for msg in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                    <strong>  {{msg }} </strong> 
                                </div>
                                <script>
                                  $(".alert").alert();
                                </script>
                              {% endfor %}
                              <div class="card">
                                <h5 class="card-header">Informations responsables </h5>
                                <div class="card-body">
                                    {{ include('responsable/_form.html.twig') }}
                                </div>
                              </div>
                            
                               
                          </div>
                        </div>
                    {% else %}
                    <div class="col-lg-8">
                        <div class="card card-success">
                          <div class="card-body">
                            <h3 class="card-header">Informations responsables   </h3>
                          <table class="table table-bordered   table-striped ">
                              <tbody style="font-size:18px">
                                 {% for responsables in app.user.responsables %}
                                  <tr>
                                      <th>Nom de Famille : </th>
                                    <strong> <td>{{ responsables.nom }}</td>  </strong>
                                  </tr>
                                  <tr>
                                      <th>Prénom :  </th>
                                      <td>{{ responsables.prenom }}</td>
                                  </tr>
                                  <tr>
                                      <th>Telephone: </th>
                                      <td>{{ responsables.tel }}</td>
                                  </tr>
                                  <tr>
                                      <th>Adresse Email: </th>
                                      <td>{{ responsables.email }}</td>
                                  </tr>
                                  
                                  <tr>
                                      <th>Adresse domicile:  </th>
                                      <td>{{ responsables.adresse }}</td>
                                  </tr>
                                  <tr>
                                      <th>votre Proffession: </th>
                                      <td>{{ responsables.proffession }}</td>
                                  </tr>
                                  <tr>
                                       {% for candidat in app.user.candidatures %}
                                            {% if candidat.status == 0  %}
                                              <th>Actions </th>
                                              <td>
                                            <button class="btn btn-success btn-sm" > <a  style="color:white"   href="{{ path('responsable_edit', {'id': responsables.id}) }}">Modifier</a></button>
                                              <div style="display: inline-block;padding-left:2% ; color:red">{{ include('responsable/_delete_form.html.twig') }} </div> 
                                            </td>
                                          {% endif %}
                                      {% endfor %}
                                  </tr>
                                {% endfor %}
                              </tbody>
                          </table>
                          <br>
                           {% for candidat in app.user.candidatures %}
                            {% if candidat.status == 0  %}
                                <a class="btn btn-primary"  href="{{ path('information_bac_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                  Passer à l'etape suivante </a>   
                                  <a class="btn btn-warning"  href="{{ path('etudiant_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                  Revenir à l'etape precedente 
                                </a> 
                            
                              {% else %}
                                <a class="btn btn-success"  href="{{ path('home_accueil')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                  Mon espace personnel  </a>
                              {% endif %}
                            {% endfor %}
                        </div>
              <!-- /.card-body -->
                    </div>
                    </div>
                    
                  {% endif %}
                </div>
            </div>
        </div>
    </div> 
{% include 'link/footer.html.twig' %}
 {% include "link/link_js.html.twig" %}  
