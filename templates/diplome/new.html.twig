
{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
               <strong> Gestion diplome </strong>
                <a  href="#" data-toggle="modal" data-target="#responsable"  class="btn btn-primary"  class="btn btn-primary" style="float:right">Ajouter un diplome </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                   <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                               <th>Intitulé diplome </th>
                              <th>Niveau </th>
                               <th>Mention </th>
                               <th>Moyenne</th>
                                <th>Session</th>
                                <th>Université </th>
                                <th>Pays</th>
                               <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for diplome in app.user.diplomes %}
                            <tr>
                               
                                <td>{{ diplome.libelle }}</td>
                                 <td> {{ diplome.typediplome.libelle }} </td>
                                  <td>{{ diplome.mention }}</td>
                                  <td>{{ diplome.moyenne  }}</td>
                                  <td>{{ diplome.session }}</td>
                                  <td>{{ diplome.universite }}</td>
                                <td>{{ diplome.pays }}</td>
                                <td>
                                     <a href="{{ asset('uploads/'~ diplome.fichier) }}"> 
                                      <i class="fas fa-solid fa-download"></i>
                                      </a>
                                
                                    <a href="{{ path('diplome_show', {'id': diplome.id}) }}"><i style="color:bleu" class="fa fa-eye "></i></a>
                                    <a class="btn btn-info btn-sm" href="{{ path('diplome_edit', {'id': diplome.id}) }}">
                                          <i class="fas fa-pencil-alt"> </i>
                                    </a>
                                  <div style="display: inline-block;padding-left:2% ; color:red">{{ include('diplome/_delete_form.html.twig') }} </div> 
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>   
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
<div class="modal fade" id="responsable" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ajouter un diplome  </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
           {{ include('diplome/_form.html.twig') }}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Quitter</button>
         
        </div>
      </div>
    </div>
</div>
{% endblock %}