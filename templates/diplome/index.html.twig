
{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                 Gestion diplome
                </h3>
                  <a  href="{{ path("diplome_new") }}" class="btn btn-primary" style="float:right">Ajouter un diplome </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                   <div class="card-body table-responsive p-0">
                     <table class="table">
                        <thead>
                            <tr>
                               <th>Intitul√© diplome </th>
                                <th>Universite inscrit </th>
                                <th>Pays</th>
                                <th>Mention </th>
                                <th>Session</th>
                                 <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for diplome in diplomes %}
                            <tr>
                               
                                <td>{{ diplome.libelle }}</td>
                                <td>{{ diplome.universite }}</td>
                                <td>{{ diplome.pays }}</td>
                                <td>{{ diplome.mention }}</td>
                                <td>{{ diplome.session }}</td>
                                
                                <td>
                                     <a href="{{ asset('upload/'~ diplome.fichier) }}"> 
                                      <i class="fas fa-solid fa-download"></i>
                                      </a>
                                
                                    <a href="{{ path('diplome_show', {'id': diplome.id}) }}"><i style="color:bleu" class="fa fa-eye "></i></a>
                                    <a class="btn btn-info btn-sm" href=href="{{ path('diplome_edit', {'id': diplome.id}) }}">
                                          <i class="fas fa-pencil-alt"> </i>
                                    </a>
                                  <div style="display: inline-block;padding-left:2% ; color:red">{{ include('diplome/_delete_form.html.twig') }} </div> 
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>


{% endblock %}

