<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Dashboard</title>
    {% include "link/link_css.html.twig" %}  
</head>
{% include "link/header.html.twig" %}
    <div class="page-container">
        <div class="main-content">
                <div class="section__content section__content--p30">
                  <div class="container-fluid">
                    <div class="row">
                    {% if (app.user.informationBacs|length) < 1  %}
                      <div class="col-lg-10">
                        {% for msg in app.flashes('success') %}
                          <div class="alert alert-success alert-dismissible fade show" role="alert">
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                              </button>
                              <strong>  {{msg }} </strong> 
                          </div>
                          <script>
                            $(".alert").alert();
                          </script>
                              
                          </div>
                        {% endfor %}
                        <div class="card text-left">
                            <h5 class="card-header">Saisie baccalaureat </h5>
                          <div class="card-body">
                              {{ include('information_bac/_form.html.twig') }}
                          </div>
                        </div>
                          {% if (app.user.informationBacs|length) == 1  %}
                            {% for candidatures in app.user.candidatures %}
                              {% if  candidatures.bourse == "oui" %}
                                <a class="btn btn-primary"  href="{{ path('bourse_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                Passer à l'etape suivante </a> 
                                {% elseif candidatures.stage=="oui"   %}
                                  <a class="btn btn-primary"  href="{{ path('experience_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                  Passer à l'etape suivante </a> 
                                {% elseif (candidatures.typediplome.id != "3") %}
                                  <a class="btn btn-primary"  href="{{ path('diplome_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                  Passer à l'etape suivante </a>

                                  {% elseif candidatures.flux == "entrant"  %}
                                      <a class="btn btn-primary"  href="{{ path('flux_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                    Passer à l'etape suivante </a>
                                  {% elseif candidatures.flux == "sortant"  %}
                                  <a class="btn btn-primary"  href="{{ path('flux_sortant_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                    Passer à l'etape suivante </a>
                                    {% else %}
                                    <a class="btn btn-primary"  href="{{ path('flux_sortant_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                    Passer à l'etape suivante </a>
                              {% endif  %}
                              <a class="btn btn-warning"  href="{{ path('responsable_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                          Revenir à l'etape precedente 
                                      </a>
                            {% endfor %}
                          {% endif %}

                      </div>
                      {% else %}
                      <div class="col-lg-8">
                          <div class="card border-primary">
                          
                            <div class="card-body">
                              <h4 class="card-header">Informations baccalaureat </h4>
                              <table class="table table-bordered table-striped">
                                  <tbody>
                                    {% for information_bac  in app.user.informationBacs %}
                                      <tr>
                                          <th>Numero de table   </th>
                                          <td>{{ app.user.numerocarte }}</td>
                                      </tr>
                                      <tr>
                                          <th>Nom du centre   </th>
                                          <td>{{ information_bac.centre}}</td>
                                      </tr>
                                       <tr>
                                          <th>Serie   </th>
                                          <td>{{ information_bac.serie.libelle}}</td>
                                      </tr>
                                      <tr>
                                          <th>Année de session    </th>
                                          <td>{{ app.user.session }}</td>
                                      </tr>
                                      <tr>
                                          <th>Etablissement frequenté  </th>
                                          <td>{{ information_bac.ecole }}</td>
                                      </tr>
                                      <tr>
                                          <th> Moyenne des matieres fondamentales </th>
                                          <td>{{ information_bac.moyenne }}</td>
                                      </tr>
                                      <tr>
                                          <th>Mention obtenue</th>
                                          <td>{{ information_bac.mention }}</td>
                                          
                                      </tr>
                                      <tr>
                                          <th>Attestation ou diplome </th>
                                          <td><a href="{{ asset('uploads/'~ information_bac.attestation) }}">consulter </a> </td>
                                      </tr>
                                      <tr>
                                          <th>Relevé de note </th>
                                            <td><a href="{{ asset('uploads/'~ information_bac.releve) }}">consulter </a> </td>
                                          
                                      </tr>
                                      <tr>
                                          <th>Decision du jury </th>
                                          <td>{{ information_bac.session }}</td>
                                      </tr>
                                      
                                      <tr>
                                       {% for candidat in app.user.candidatures %}
                                              {% if candidat.status == 0  %}
                                              <th>Actions </th>
                                              <td>
                                                <a class="btn btn-success" href="{{ path('information_bac_edit', {'id': information_bac.id}) }}">Modifier</a>
                                                <div style="display: inline-block;padding-left:2% ; color:red">{{ include('information_bac/_delete_form.html.twig') }} </div> 
                                              </td>
                                              {% endif %}
                                        {% endfor %}
                                      </tr>
                                       {% endfor %} 
                                  </tbody>
                              </table>
                              <br>
                              <br>
                               {% if (app.user.informationBacs|length) == 1  %}
                                {% for candidatures in app.user.candidatures %}
                                   {% if candidatures.status == 0  %}
                                      {% if  candidatures.bourse == "oui" %}
                                        <a class="btn btn-primary"  href="{{ path('bourse_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                        Passer à l'etape suivante </a> 
                                        {% elseif candidatures.stage=="oui"   %}
                                          <a class="btn btn-primary"  href="{{ path('experience_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                          Passer à l'etape suivante </a> 
                                        {% elseif (candidatures.typediplome.id != "3") %}
                                          <a class="btn btn-primary"  href="{{ path('diplome_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                          Passer à l'etape suivante </a>

                                          {% elseif candidatures.flux == "entrant"  %}
                                              <a class="btn btn-primary"  href="{{ path('flux_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                            Passer à l'etape suivante </a>
                                          {% elseif candidatures.flux == "sortant"  %}
                                          <a class="btn btn-primary"  href="{{ path('flux_sortant_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                            Passer à l'etape suivante </a>
                                          {% else %}
                                            <a class="btn btn-primary"  href="{{ path('flux_sortant_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                            Passer à l'etape suivante </a>
                                      {% endif  %}
                                  <a class="btn btn-warning"  href="{{ path('responsable_new')}}"> <i class="fa fa-location-arrow" aria-hidden="true"></i>
                                       Revenir à l'etape precedente 
                                  </a> 
                                  {% else %}
                                  
                                 {% endif %}
                              {% endfor %}
                            {% endif %}
                            </div>
                          </div>
                      </div>
                    {% endif %}
                      
                  </div>
                </div>
            </div>
        </div>
    </div>
     
{% include 'link/footer.html.twig' %}
 {% include "link/link_js.html.twig" %}  
