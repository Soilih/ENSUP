                <td>{{ information_bac.ecole }}</td>
                <td>{{ information_bac.moyenne }}</td>
                <td>{{ information_bac.mention }}</td>
                <td>{{ information_bac.attestation }}</td>
                <td>{{ information_bac.releve }}</td>
                <td>{{ information_bac.session }}</td>
                <td>
                    <a href="{{ path('information_bac_show', {'id': information_bac.id}) }}">show</a>
                    <a href="{{ path('information_bac_edit', {'id': information_bac.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('information_bac_new') }}">Create new</a>
