{% extends 'base.html.twig' %}

{% block title %}InformationBac index{% endblock %}

{% block body %}
    <h1>InformationBac index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ecole</th>
                <th>Moyenne</th>
                <th>Mention</th>
                <th>Attestation</th>
                <th>Releve</th>
                <th>Session</th>
                <th>Cursus</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for information_bac in information_bacs %}
