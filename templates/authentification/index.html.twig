{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
      <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header" style="font-szie:24px">
                 Gestion authentification 
                
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Reference </th>
                            <th>Date demande</th>
                            <th>Diplomes</th>
                            <th>Releve</th>
                            <th>Bac</th>
                            <th>Commentaire</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for authentification in authentifications %}
                        <tr>
                            
                            <td>
                               {{authentification.datecreate ? authentification.datecreate|date('Y-m-d') : '' }}
                            </td>
                            <td>
                               {{authentification.reference}}
                            </td>
                            <td>
                                <a href="{{ asset('uploads/'~ authentification.diplomes) }}"> 
                                <i class="fas fa-solid fa-download"></i>
                                </a>
                            </td>
                            <td>
                            
                             <a href="{{ asset('uploads/'~ authentification.releve) }}"> 
                                <i class="fas fa-solid fa-download"></i>
                            </a>
                            </td>
                            <td>
                                <a href="{{ asset('uploads/'~  authentification.bac) }}"> 
                                    <i class="fas fa-solid fa-download"></i>
                                </a>
                            </td>
                            <td>{{ authentification.commentaire }}</td>
                            <td>
                               <div style="display: inline-block;padding-left:2% ; color:red">{{ include('authentification/_delete_form.html.twig') }} </div> 
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6"></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
